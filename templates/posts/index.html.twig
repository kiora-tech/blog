{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
            {% for article in articles %}
                <div class="post-preview">
                    <a href="{{ path('posts_show', {'id': article.id}) }}">
                        <h2 class="post-title">
                            {{ article.title }}
                        </h2>
                        <h3 class="post-subtitle">
                            {{ article.summarize }}
                        </h3>
                    </a>
                    <p class="post-meta">Posted by
                        <a href="#">Rathgeber St√©phane</a>
                        on {{ article.createdAt|date('F j, Y') }}</p>
                </div>
                <hr>
            {% endfor %}

            <!-- Pager -->
            <div class="clearfix">
                <a class="btn btn-primary float-right" href="#">Older Posts &rarr;</a>
            </div>
        </div>
    </div>
{% endblock %}
